{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@highlight-hank/web/*": ["apps/frontend/*"],
      "@shared/*": ["libs/shared/src/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"]
}
